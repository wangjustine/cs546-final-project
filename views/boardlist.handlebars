<h2>Your Boards</h2>

<ul>
  {{#each boards}}
    <li>
      <a href="/boards/{{this.boardId}}">{{this.title}}</a>
      <p>{{this.description}}</p>
    </li>
  {{/each}}
</ul>

{{#if (eq user.category "admin")}}
    <form id="create-board-form" action="/boards/create" method="POST">
        <label for="board-title">Title:</label>
        <input type="text" id="board-title" name="title" required>
        
        <label for="board-description">Description:</label>
        <textarea id="board-description" name="description" required></textarea>
        
        <button type="submit">Create new board</button>
    </form>
    <script src="/js/boardlist.js"></script>
{{/if}}

